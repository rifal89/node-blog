<!DOCTYPE html>
<html>
  <head>
    <title>留言</title>
  </head>
  <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">  
	<script src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js"></script>
	<script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style type="text/css">
  	.zhanshi{width: 600px;min-height: 500px;border: 1px solid #ccc;position: absolute;left: 50%;top: 50%;margin-top: -250px;margin-left: -300px;box-shadow: 10px 10px 10px #ccc;}
  	.zhanshi caption{height: 50px;text-align: center;line-height: 50px;font-size: 20px;}
  </style>
  <body>
  	
  	
  	
  	<div class="zhanshi">
		    <table class="table table-hover">
					<caption>留言板</caption>
					<thead>
						<tr>
							<th>标题</th>
							<th>内容</th>
						</tr>
					</thead>
					<tbody>
						<% shuju.forEach(function(item,index){ %>
			    	<tr>
			    		<td><%- item.biaoti  %></td>
			    		<td><%- item.con  %></td>
			    	</tr>
			    	<%}) %>
					</tbody>
				</table>
   
    </div>
  </body>
</html>
